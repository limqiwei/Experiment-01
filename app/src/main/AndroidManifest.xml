<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QIWEI_EXPERIMENT_01"
        tools:targetApi="31">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_widget_playground"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TextWidgetActivity"
            android:label="@string/title_text_widget_playground"
            android:screenOrientation="portrait"
            android:exported="true"></activity>
        <activity
            android:name=".activities.ListViewActivity"
            android:label="@string/title_list_view_playground"
            android:screenOrientation="portrait"
            android:exported="true"></activity>
        <activity
            android:name=".activities.RecyclerViewV1Activity"
            android:label="@string/title_recycler_view_playground"
            android:screenOrientation="portrait"
            android:exported="true"></activity>
        <activity
            android:name=".activities.HRecyclerViewActivity"
            android:label="@string/title_horizontal_recycler_view_playground"
            android:screenOrientation="portrait"
            android:exported="true"></activity>
        <activity
            android:name=".activities.GridRecyclerViewActivity"
            android:label="@string/title_grid_recycler_view_playground"
            android:screenOrientation="portrait"
            android:exported="true"></activity>
    </application>

</manifest>